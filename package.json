{
  "name": "MindMap",
  "version": "1.0.0",
  "description": "mind map",
  "main": "electron-main.js",
  "license": "UNLICENSED",
  "scripts": {
    "start": "rm -rf bundle && webpack-dev-server --open",
    "build": "rm -rf bundle && webpack --mode=production --prod",
    "stats": "rm -rf bundle && webpack --mode=production --profile --json > compilation-stats.json",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish always",
    "electron": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Sem Postma",
  "devDependencies": {
    "@types/jquery": "^2.0.40",
    "autoprefixer": "^8.5.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "electron-builder": "^20.39.0",
    "electron-windows-store": "^2.1.0",
    "file-loader": "^3.0.1",
    "gh-pages": "^2.0.1",
    "glob": "^7.1.3",
    "jquery": "^3.2.1",
    "md2js-loader": "^1.0.3",
    "mini-css-extract-plugin": "^0.5.0",
    "mustache2js-loader": "^1.0.8",
    "ncp": "^2.0.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^2.1.5",
    "precss": "^3.1.2",
    "socket.io-client": "^2.1.0",
    "style-loader": "^0.21.0",
    "timeago.js": "^3.0.2",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "electron": "^4.1.4"
  },
  "dependencies": {
    "bootstrap": "^3.4.1",
    "dom-to-image": "^2.6.0",
    "file-saver": "^2.0.1",
    "jszip": "^3.2.1",
    "url-loader": "^1.1.2",
    "winstrap": "^0.5.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LesterGallagher/mindmapper.git"
  },
  "build": {
    "appId": "com.ESStudio.Mindview",
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "target": [
        "portable",
        "appx"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "repo": "mindmapper",
        "owner": "LesterGallagher",
        "publishAutoUpdate": true
      },
      {
        "provider": "bintray",
        "package": "mindmapper",
        "repo": "Mindviewer",
        "owner": "afirus",
        "publishAutoUpdate": true
      }
    ],
    "files": [
      "**/*",
      "!node_modules/*",
      "!dist/*",
      "!src/*"
    ]
  }
}